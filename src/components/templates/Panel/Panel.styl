/**
 * Panel
 * =====
 *
 *
 */

$color-panel = #443D6C;
$color-white = #FFF;


.Panel {
	height: 100%;
	color: $color-white;
  border: 1px solid $color-white;
	background-color: $color-panel;

	&__Box {
		position: relative;
		width: 100%;
		height: 100%;
		opacity: 1;
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
	}

	// Link
	&__Trigger {
		position: relative;
		width: 100%;
		height: 100%;
		opacity: 1;
		text-decoration: none;

		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;

		// hover effect from: http://trackingjs.com 	||		figure.effect
		&::before, &::after {
			position: absolute;
		  top: 30px;
		  right: 30px;
		  bottom: 30px;
		  left: 30px;
		  content: '';
			opacity: 0;
		  transition: opacity .35s, transform .35s;
			transition-delay: 100ms;
		}

		&::before {
			transform: scale(0, 1);
		  border-top: 1px solid $color-white;
		  border-bottom: 1px solid $color-white;
		}

		&::after {
			transform: scale(1, 0);
		  border-right: 1px solid $color-white;
		  border-left: 1px solid $color-white;
		}

		&:hover.Panel__Trigger::before,
		&:hover.Panel__Trigger::after {
			transform: scale(1);
			opacity: 1;
		}
	}

	&--active {
		border: 1px solid $color-white !important;
	}

	// &--active &__Trigger {
	//
	// }

	&__View {
		opacity: 0;
		position: relative;
	}

	&--active &__View {
		opacity: 1;
	}

	&__Content {
		// solution:
		// - compute the new size and adjust the fullscreen defined grid container solution !
	}

	// &__Icon {
	//
	// }

	&__Title {
		color: #FFF;
		text-align: center;
		margin: 0;
		padding: 20px;
		width: 100%;
		font-size: 1.8em;
		letter-spacing: 2px;
		font-weight: 700;
		text-transform: uppercase;
	}

	// close link
	&__Close {
		position: absolute;
		width: 50px;
		height: 50px;
		right: -200px;
		top: -50px;

		color: $color-white;
	  font-size: 25px;
	  border-radius: 50%;
	  border: 2px solid $color-white;
	  text-align: center;
	  line-height: 40px; // or 2.5rem ?
	  text-decoration: none;
	}
}
