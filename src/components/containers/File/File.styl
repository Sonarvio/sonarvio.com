/**
 * File
 * ====
 *
 *
 */


.File {

	border-right: 0;

	&__Icon {

	}

	&__Content {
		lost-center: 980px;
	}

	&__Input {
		padding: 5px;
		border: 1px solid #fff;
		font-size: 16px;
		cursor: pointer;

		&::-webkit-file-upload-button {
		  visibility: hidden;
		}
	}

	&__Display {
		width: 980px;
  	height: 200px;

		transition: none;

		color: black;
		& a {
			color: blue;
		}
	}

	&__Player {
		width: 500px;
		margin: 0 auto;
		margin-top: 30px;
		display: block;
		visibility: hidden;
		&--active {
			visibility: visible;
		}
	}
}
